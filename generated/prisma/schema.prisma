generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String
  username   String
  created_at DateTime @default(now())

  Post Post[]
  Like Like[]

  @@map("users")
}

model Post {
  id          String     @id @default(uuid())
  title       String
  description String
  downloads   Int
  visibility  Visibility @default(PUBLIC)

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  Like Like[]

  @@map("posts")
}

model Like {
  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  post    Post   @relation(fields: [post_id], references: [id])
  post_id String

  created_at DateTime @default(now())

  @@id([user_id, post_id])
  @@map("likes")
}

enum Visibility {
  PUBLIC
  PRIVATE
}
